<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.github.ebortsov.photogallery.ui.GalleryFragment">
        <action
            android:id="@+id/galleryFragment_to_photoPageFragment"
            app:destination="@id/photoPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/photoPageFragment"
        android:name="com.github.ebortsov.photogallery.ui.PhotoPageFragment">
        <argument
            android:name="photoPageUri"
            app:argType="android.net.Uri" />
    </fragment>

</navigation>